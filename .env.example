# TasKvox AI Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/taskvox_db

# JWT Configuration
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=720

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ElevenLabs API (Optional - users can set their own)
DEFAULT_ELEVENLABS_API_KEY=your-elevenlabs-api-key

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/

# Logging
LOG_LEVEL=INFO
LOG_FILE=taskvox.log

# Email Settings (for future notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (for future caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Webhook Settings (for ElevenLabs callbacks)
WEBHOOK_URL=https://your-domain.com/webhooks/elevenlabs
WEBHOOK_SECRET=your-webhook-secret-key